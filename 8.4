#include <stdio.h>

int main()
{
    int a, c, d, q;
    printf("Введите число а: ");
    scanf("%d", &a);
    
    if(a/100==0)
    {
        printf("Поменяем разряды числа а местами.\n");
        c = a / 10;
        d = a % 10;
        q = 10*d + c;
        
        printf("Видоизменённое число а = %d.\n", q);
        return 0;
    }
    else
    {
        printf("Перечитайте, пожалуйста, условие. Вы не правы!\n");
        return 0;
    }
}
