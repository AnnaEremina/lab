#include <stdio.h>

int main()
{
    int N;
    printf("Введите размер массива N: ");
    scanf("%d", &N);
    if (N > 1)
    {
        int A, D;
        printf("Введите первый член A и знаменатель гп D: ");
        scanf("%d %d", &A, &D);
        int a[N];
        for (int i = 0; i < N; i++)
        {
            a[i] = A;
            A *= D;
            printf("%d\t", a[i]);
        }
    }
    else printf("error");
    return 0;
}
