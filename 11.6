#include <stdio.h>
int main()
{
    int a;
    char* razryad;
    char *chet;
    printf("Введите число А от 1 до 999: ");
    scanf("%d", &a);
    if((a < 1) || (a > 999)){
        printf("Число вне промежутка!");
        return 0;
    }
    else{
        if(a / 10 == 0){
            razryad = "однозначное число.";
        }
        else if (a / 100 == 0){
            razryad = "двузначное число.";
        }
        else if(a / 1000 == 0){
            razryad = "трёхзначное число.";
        }
        if (a % 2 == 0){
            chet = "Чётное";
        }
        else{
            chet = "Нечётное";
        }
        printf("%s %s", chet, razryad);
        return 0;
    }
}
