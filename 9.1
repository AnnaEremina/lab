#include <stdio.h>

int main()
{
    int t;
    printf("Вы проснулись некоторое время назад в 00:00.\n");
    printf("Пожалуйста, сообщите, сколько прошло секунд? ");
    scanf("%d", &t);
    
    if(t >= 60)
    {
        while(t >= 60)
        {
            t -= 60;
        }
        printf("Шли минуты, и оставались секунды. Сколько? %d", t);
    }
    else
    {
        printf("Минут прошло 0, что очень жаль, подождите %d секунд до следующей минуты.\n", 60-t);
    }
    return 0;
}
