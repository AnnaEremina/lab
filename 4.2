#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS

int main()
{
	float d;
	float pi = 3.14;
	
	printf("Дана окружность. Найдём её длину черед диаметр.\n");
	printf("Введите значение диаметра d:\n");
	scanf("%f", &d);
	if(d <= 0)
	{
	    printf("Error!\n");
	}
	else
	{
	    printf("Имеем окружность с диаметром d = %f.\n", d);
	    float L;
	    L = pi * d;
	    printf("Длина данной окружности равна %.2f.\n", L);
	    return 0;
	}
}
