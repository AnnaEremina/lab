#include <stdio.h>
#include <math.h>
int main(){
   int n, sum, count;
   printf("Введите число N > 0. Возведём его в квадрат. N = ");
   scanf("%d", &n);
   count = 1;
   sum = 0;
   if (n > 0) {
      while (sum != pow(n, 2)) {
         sum += count;
         if (sum != pow(n, 2)) {
            printf(" = %d\n", sum);
         }
         count += 2;
      }
      printf("Квадрат числа %d равен %d", n, sum);
   }
   else
      printf("Вы снова ошиблись с вводом!\n");
}
