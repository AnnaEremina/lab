#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS
int main()
{
	float a, b;
	printf("Найдём площадь и периметр прямоугольника:\n ");
	printf("Введите значение длины a:\n ");
	scanf("%f", &a);
	
	if(a <= 0)
	{
	    printf("Error!\n");
	}
	else
	{
	    printf("Введите значение ширины b:\n ");
	    scanf("%f", &b);
	    
	    if(b <= 0)
	    {
	        printf("Error!\n");
	    }
	    else
	    {
	        printf("Имеем прямоугольник с длиной %f и шириной %f\n", a, b);
	        float S, P;
	        S = a * b;
	        P = 2 * (a + b);
	        printf("Имеем прямоугольник с площадью %.2f и периметром %.2f\n", S, P);
	        return 0;
	    }
	}
}
