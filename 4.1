#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS
int main()
{
	int a, b;
	printf("Найдём площадь и периметр прямоугольника:\n ");
	printf("Введите значение длины a:\n ");
	scanf("%d", &a);
	printf("Введите значение ширины b:\n ");
	scanf("%d", &b);
	printf("Имеем прямоугольник с длиной %d и шириной %d\n", a, b);

	int S, P;
	S = a * b;
	P = 2 * (a + b);

	printf("Имеем прямоугольник с площадью %d и периметром %d\n", S, P);
	return 0;
}
