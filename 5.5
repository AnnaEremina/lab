#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <locale.h>
#include <math.h>

int main()
{
	setlocale(LC_ALL, "Rus");
	int x1, x2, y1, y2, z1, z2, P, S, a, b, c, p;
	printf("Даны координаты вершин треугольника. Найти его периметр и площадь.\n");

	printf("Введите координаты 1 вершины: \n");
	scanf("%d %d", &x1, &x2);

	printf("Введите координаты 2 вершины: \n");
	scanf("%d %d", &y1, &y2);

	printf("Введите координаты 3 вершины: \n");
	scanf("%d %d", &z1, &z2);

	a = sqrt(pow(x1 - y1, 2) + pow(x2 - y2, 2));
	b = sqrt(pow(x1 - z1, 2) + pow(x2 - z2, 2));
	c = sqrt(pow(z1 - y1, 2) + pow(z2 - y2, 2));

	P = a + b + c;
	p = P / 2;
	S = sqrt(p * (p - a) * (p - b) * (p - c));

	printf("Площадь равна %d, периметр равен %d.\n", S, P);
	return 0;
}
