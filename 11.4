#include <stdio.h>
int main()
{
    float x, y;
    printf("Введите координаты точки А: \n");
    scanf("%f %f", &x, &y);
    if ((x == 0) || (y == 0))
    {
        printf("Введены неверные значения! Измените их.\n");
        return 0;
    }
    else
    {
        if ((x > 0) && (y > 0))
        {
            printf("Первая четверть.\n");
            return 0;
        }
        else if ((x > 0) && (y < 0))
        {
            printf("Червёртая четверть.\n");
            return 0;
        }
        else if ((x < 0) && (y > 0))
        {
            printf("Вторая четверть.\n");
            return 0;
        }
        else if ((x < 0) && (y < 0))
        {
            printf("Третья четверть.\n");
            return 0;
        }
    }
}
