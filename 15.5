#include <stdio.h>
#include <math.h>
int Fact2(int N)
{
    int a = 1;
    if (N > 0)
    {
        if (N % 2 == 0)
        {
            for (int i = 2; i <= N; i += 2)
            {
                a *= i;
            }
        }
        else 
        {
            for (int i = 1; i <= N; i += 2)
            {
                a *= i;
            }
        }
    }
    else printf("error");
    return a;
}

int main()
{
    int b;
    printf("Введите число для вычисления двойного факториала: ");
    scanf("%d", &b);
    printf("%d", Fact2(b));
}
